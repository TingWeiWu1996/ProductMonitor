<Page
    x:Class="ProductMonitor.Views.SettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProductMonitor.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SettingPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="AUTO" />
            <RowDefinition Height="40" />
            <RowDefinition Height="AUTO" />
            <RowDefinition Height="40" />
            <RowDefinition Height="AUTO" />
            <RowDefinition Height="40" />
            <RowDefinition Height="AUTO" />
            <RowDefinition Height="40" />
            <RowDefinition Height="AUTO" />
        </Grid.RowDefinitions>
        <Label
            x:Name="data1"
            VerticalAlignment="Center"
            Content="設備清單" />
        <Label
            x:Name="data2"
            Grid.Row="2"
            VerticalAlignment="Center"
            Content="環境監測" />
        <Label
            x:Name="data3"
            Grid.Row="4"
            VerticalAlignment="Center"
            Content="設備監測" />
        <Label
            x:Name="data4"
            Grid.Row="6"
            VerticalAlignment="Center"
            Content="配置一" />
        <Label
            x:Name="data5"
            Grid.Row="8"
            VerticalAlignment="Center"
            Content="配置二" />

        <Grid
            Grid.Row="1"
            Height="200"
            Margin="10,5">
            <StackPanel>
                <Grid
                    Height="30"
                    Margin="0,1"
                    Background="#09000000">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition Width="50" />
                    </Grid.ColumnDefinitions>

                    <Border BorderBrush="#eee" BorderThickness="0,0,0,1" />
                    <Border
                        Grid.Row="2"
                        BorderBrush="#eee"
                        BorderThickness="0,0,0,1" />
                    <Border
                        Grid.Row="4"
                        BorderBrush="#eee"
                        BorderThickness="0,0,0,1" />
                    <Border
                        Grid.Row="6"
                        BorderBrush="#eee"
                        BorderThickness="0,0,0,1" />
                    <Border
                        Grid.Row="8"
                        BorderBrush="#eee"
                        BorderThickness="0,0,0,1" />

                    <TextBlock
                        Margin="10,0"
                        VerticalAlignment="Center"
                        Text="控制器1#" />
                    <TextBlock
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Text="9600，N,8,1,1" />
                    <TextBlock
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Text="ModbusRTU" />
                    <TextBlock
                        Grid.Column="3"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        <Hyperlink>定位表</Hyperlink>
                    </TextBlock>
                </Grid>

                <UniformGrid Columns="2">
                    <Grid Height="30" Margin="30,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" Text="溫度" />
                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Text="40001" />
                        <TextBlock
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            Text="℃" />
                        <TextBlock Grid.Column="3" VerticalAlignment="Center">
                            <Hyperlink>删除</Hyperlink>
                        </TextBlock>
                    </Grid>

                    <Grid Height="30" Margin="30,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" Text="濕度" />
                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Text="40002" />
                        <TextBlock
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            Text="%" />
                        <TextBlock Grid.Column="3" VerticalAlignment="Center">
                            <Hyperlink>删除</Hyperlink>
                        </TextBlock>
                    </Grid>
                </UniformGrid>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="3" Height="200">
            <TextBlock Text="環境監測内容" />
        </Grid>

        <Grid Grid.Row="5" Height="200">
            <TextBlock Text="設備監測内容" />
        </Grid>

        <Grid Grid.Row="7" Margin="20">
            <Border
                Padding="20"
                Background="#152144"
                CornerRadius="10">
                <StackPanel
                    Width="400"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                    <TextBlock
                        Margin="0,0,0,20"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="#29D8D5"
                        Text="系統連線配置" />

                    <StackPanel Margin="0,10" Orientation="Horizontal">
                        <TextBlock
                            Width="100"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Foreground="#AAFFFFFF"
                            Text="模擬模式：" />
                        <CheckBox VerticalAlignment="Center" IsChecked="{Binding IsSimulation}">
                            <TextBlock
                                FontSize="14"
                                Foreground="White"
                                Text="啟用虛擬數據 (不連線 PLC)" />
                        </CheckBox>
                    </StackPanel>

                    <StackPanel Margin="0,10" Orientation="Horizontal">
                        <TextBlock
                            Width="100"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Foreground="#AAFFFFFF"
                            Text="PLC IP：" />
                        <TextBox
                            Width="200"
                            Height="30"
                            Padding="5"
                            Background="#0B1221"
                            BorderBrush="#29D8D5"
                            FontSize="14"
                            Foreground="White"
                            Text="{Binding IpAddress}" />
                    </StackPanel>

                    <StackPanel Margin="0,10" Orientation="Horizontal">
                        <TextBlock
                            Width="100"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Foreground="#AAFFFFFF"
                            Text="Port：" />
                        <TextBox
                            Width="200"
                            Height="30"
                            Padding="5"
                            Background="#0B1221"
                            BorderBrush="#29D8D5"
                            FontSize="14"
                            Foreground="White"
                            Text="{Binding Port}" />
                    </StackPanel>

                    <Button
                        Width="150"
                        Height="40"
                        Margin="100,20,0,0"
                        HorizontalAlignment="Left"
                        Background="#29D8D5"
                        Command="{Binding SaveCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Content="儲存並套用"
                        Cursor="Hand"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="#152144">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5" />
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="9" Height="200">
            <TextBlock Text="配置二内容" />
        </Grid>
    </Grid>
</Page>
