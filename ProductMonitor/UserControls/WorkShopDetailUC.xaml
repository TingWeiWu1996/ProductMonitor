<UserControl
    x:Class="ProductMonitor.UserControls.WorkShopDetailUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProductMonitor.UserControls"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1200"
    Height="675"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="RadioButton">
            <Setter Property="Height" Value="22" />
            <Setter Property="Width" Value="50" />
            <Setter Property="Background" Value="#ddd" />
            <Setter Property="Foreground" Value="#888" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="BorderBrush" Value="#33ffffff" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="Red" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Margin="10,5" Background="#1118aabd" />
        <Border
            Grid.Row="1"
            Margin="10,5"
            Background="#1118aabd" />

        <!--  返回按鈕 - 不使用 BtnStyle  -->
        <Button
            Width="80"
            Height="35"
            Margin="20,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Background="Transparent"
            BorderThickness="1"
            Command="{Binding GoBackCmm, RelativeSource={RelativeSource AncestorType=Window}}">
            <Button.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Offset="0.0" Color="Red" />
                    <GradientStop Offset="0.5" Color="Green" />
                    <GradientStop Offset="1.0" Color="Blue" />
                </LinearGradientBrush>
            </Button.BorderBrush>
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,5,0"
                    VerticalAlignment="Center"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="16"
                    Foreground="White"
                    Text="&#xE72B;" />
                <TextBlock
                    VerticalAlignment="Center"
                    Foreground="White"
                    Text="返回" />
            </StackPanel>
        </Button>
        <StackPanel
            Margin="20,5"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                VerticalAlignment="Center"
                Foreground="White"
                Text="機台狀態" />
            <RadioButton Content="全部" IsChecked="True" />
            <RadioButton Content="作業" IsChecked="True" />
            <RadioButton Content="等待" IsChecked="True" />
            <RadioButton Content="故障" IsChecked="True" />
            <RadioButton Content="停機" IsChecked="True" />
        </StackPanel>
        <!--  第二行  -->
        <ScrollViewer Grid.Row="1" Margin="10,5">
            <ItemsControl Margin="0,5" ItemsSource="{Binding MachineList}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="5" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <!--  數據樣式  -->
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Height="260"
                            Margin="10,5"
                            Background="#0a18aabd"
                            BorderBrush="#9918aabd"
                            BorderThickness="0,1,0,0">
                            <Grid TextBlock.FontSize="11">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="22" />
                                    <RowDefinition Height="22" />
                                    <RowDefinition Height="22" />
                                </Grid.RowDefinitions>
                                <!--  第一列  -->
                                <TextBlock
                                    Margin="20,0"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Foreground="#aaffffff">
                                    <Image
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,5,0"
                                        Source="/Resource/Images/welding.png"
                                        Stretch="Uniform" />
                                    <Run Text="{Binding MachineName}" />
                                </TextBlock>
                                <StackPanel
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <Border
                                        Width="7"
                                        Height="7"
                                        Background="LightGreen"
                                        CornerRadius="4" />
                                    <TextBlock
                                        Margin="10,0"
                                        FontSize="10"
                                        Foreground="LightGreen"
                                        Text="{Binding Status}" />
                                </StackPanel>
                                <!--  第二列  -->
                                <local:RingUC
                                    Grid.Row="1"
                                    Margin="30"
                                    PercentValue="{Binding Percent}" />
                                <!--  第三列  -->
                                <StackPanel
                                    Grid.Row="2"
                                    Margin="15,0"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <TextBlock Foreground="#55ffffff" Text="任務狀態: " />
                                    <Label
                                        Padding="5,1"
                                        BorderBrush="LightGreen"
                                        BorderThickness="1"
                                        Content="{Binding Status}"
                                        FontSize="10" />
                                </StackPanel>
                                <TextBlock
                                    Grid.Row="2"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center">
                                    <Hyperlink
                                        Click="Hyperlink_Click"
                                        Foreground="#55ffffff"
                                        TextDecorations="None">
                                        詳情
                                    </Hyperlink>
                                </TextBlock>
                                <!--  第四列  -->
                                <StackPanel
                                    Grid.Row="3"
                                    Margin="15,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <TextBlock Foreground="#55ffffff" Text="當前任務: " />
                                    <TextBlock Foreground="White">
                                        <Run Text="{Binding FinishedCount}" />
                                        <Run Text="/" />
                                        <Run Text="{Binding PlanCount}" />
                                    </TextBlock>
                                </StackPanel>
                                <!--  第五列  -->
                                <StackPanel
                                    Grid.Row="4"
                                    Margin="15,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <TextBlock Foreground="#55ffffff" Text="工單: " />
                                    <TextBlock Foreground="White">
                                        <Run Text="{Binding FinishedCount}" />
                                        <Run Text="{Binding OrderNo}" />
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <Border
            Name="detail"
            Grid.RowSpan="2"
            Background="#22000000"
            Visibility="Collapsed">
            <Border
                x:Name="detailContent"
                VerticalAlignment="Bottom"
                Background="WhiteSmoke"
                BorderBrush="#aa3bedf1"
                BorderThickness="0,1,0,0">
                <Grid Height="350">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <!--  第一列  -->
                    <TextBlock
                        Margin="20,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="#555"
                        Text="機台效率趨勢圖" />
                    <Button
                        Width="40"
                        Height="40"
                        HorizontalAlignment="Right"
                        Content="&#xE10A;"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="20"
                        Foreground="#333"
                        Style="{StaticResource OperateBtnStyle}" 
                        Click="Button_Click"/>  

                    <!--  第二列  -->
                    <StackPanel
                        Grid.Row="1"
                        Margin="40,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <Border
                            Width="7"
                            Height="7"
                            Margin="20,0,5,0"
                            Background="LightGreen" />
                        <TextBlock Text="作業中" />

                        <Border
                            Width="7"
                            Height="7"
                            Margin="20,0,5,0"
                            Background="Orange" />
                        <TextBlock Text="等待中" />

                        <Border
                            Width="7"
                            Height="7"
                            Margin="20,0,5,0"
                            Background="PaleVioletRed" />
                        <TextBlock Text="故障中" />

                        <Border
                            Width="7"
                            Height="7"
                            Margin="20,0,5,0"
                            Background="Red" />
                        <TextBlock Text="停機中" />
                    </StackPanel>
                    <StackPanel
                        Grid.Row="1"
                        Margin="40,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <RadioButton Content="日" />
                        <RadioButton Content="週" />
                        <RadioButton Content="月" />
                        <RadioButton Content="年" />
                    </StackPanel>

                    <!--  第三列  -->
                    <lvc:CartesianChart Grid.Row="2" Margin="20,0">
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Labels="21-12,20-12,21-01,21-02,21-03,21-04,21-05,21-06,21-07,21-09,21-10,21-11,21-12,22-01,22-02,22-03,22-04,22-05,22-06,22-07">
                                <lvc:Axis.Separator>
                                    <lvc:Separator Step="1" StrokeThickness="0" />
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisX>

                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis MaxValue="100" MinValue="0">
                                <lvc:Axis.Separator>
                                    <lvc:Separator Stroke="#08000000" />
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisY>

                        <lvc:CartesianChart.Series>
                            <lvc:StackedColumnSeries
                                Title="作业"
                                Fill="LightGreen"
                                MaxColumnWidth="15"
                                StrokeThickness="0"
                                Values="34.02 ,36.72 ,73.80 ,54.18 ,87.73 ,61.63 ,71.22 ,56.96 ,47.21 ,42.67 ,49.14 ,76.79 ,77.42 ,68.08 ,62.95 ,73.94 ,44.93 ,39.66 ,55.21 ,33.18" />

                            <lvc:StackedColumnSeries
                                Title="等待"
                                Fill="Orange"
                                MaxColumnWidth="15"
                                StrokeThickness="0"
                                Values="7.91,7.75,4.30,0.40,4.82,8.98,5.07,2.42,6.15,0.57,8.91,8.75,5.30,1.40,5.82,9.98,6.07,3.42,7.15,1.57" />

                            <lvc:StackedColumnSeries
                                Title="故障"
                                Fill="PaleVioletRed"
                                MaxColumnWidth="15"
                                StrokeThickness="0"
                                Values="19.50,19.51,7.87,15.63,5.57,13.69,10.25,10.99,15.45,13.87,0.94,12.94,11.17,2.36,11.53,5.02,1.01,12.60,4.80,19.40" />

                            <lvc:StackedColumnSeries
                                Title="停机"
                                Fill="LightGray"
                                MaxColumnWidth="15"
                                StrokeThickness="0"
                                Values="38.57 ,36.02 ,14.03 ,29.79 ,1.87 ,15.69 ,13.45 ,29.63 ,31.18 ,42.89 ,41.01 ,1.52 ,6.11 ,28.15 ,19.70 ,11.06 ,47.98 ,44.33 ,32.84 ,45.85" />
                        </lvc:CartesianChart.Series>
                    </lvc:CartesianChart>
                </Grid>

            </Border>
        </Border>


    </Grid>
</UserControl>
