<UserControl
    x:Class="ProductMonitor.UserControls.RaderUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProductMonitor.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid x:Name="LayGrid">
        <!--  畫布  -->
        <Canvas x:Name="mainCanvas" Margin="0,10"/>
        <!--  4規則多邊形  -->
        <Polygon
            x:Name="P1"
            Stroke="Blue"
            StrokeThickness="1" />
        <Polygon
            x:Name="P2"
            Stroke="Blue"
            StrokeThickness="1" />
        <Polygon
            x:Name="P3"
            Stroke="Blue"
            StrokeThickness="1" />
        <Polygon
            x:Name="P4"
            Stroke="Blue"
            StrokeThickness="1" />

        <!--  數據多邊形  -->
        <Polygon
            x:Name="P5"
            Fill="#550091F0"
            Stroke="Orange"
            StrokeThickness="1" />
    </Grid>
</UserControl>
